@model IEnumerable<ProjetoDrogas.Models.Fornecedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Fornecedores</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar novo fornecedor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.FornecedorId" class="btn btn-primary">Edit</a>

                    <a asp-action="Delete" asp-route-id="@item.FornecedorId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
