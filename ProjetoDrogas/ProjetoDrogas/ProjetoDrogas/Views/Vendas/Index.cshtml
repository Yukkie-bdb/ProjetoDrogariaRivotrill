@model IEnumerable<ProjetoDrogas.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<h1>Vendas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar Venda</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clientes.Nome)
            </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VendaId" class="btn btn-primary">Editar nota</a>
                <a asp-action="Index" asp-controller="ItemVendas" asp-route-id="@item.VendaId" class="btn btn-secondary">Produto</a> 
                
               
                
            </td>
        </tr>
}
    </tbody>
</table>
